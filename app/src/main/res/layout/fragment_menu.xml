<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/menuF_img_dummy1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/menu_dummy1"
            app:layout_constraintBottom_toTopOf="@id/menuF_img_dummy2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/menuF_img_dummy2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/menu_dummy2"
            app:layout_constraintTop_toBottomOf="@id/menuF_img_dummy1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>